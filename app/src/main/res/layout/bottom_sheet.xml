<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_cy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <View
            android:id="@+id/bottom_sheet_top_line"
            android:layout_width="32dp"
            android:layout_height="5dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_bottom_sheet_line"
            app:layout_constraintBottom_toTopOf="@id/bottom_sheet_icon_cy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_icon_cy"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:id="@+id/bottom_sheet_icon_link_iv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_link"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/bottom_sheet_icon_link_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="링크"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/bottom_sheet_icon_link_iv"
                app:layout_constraintStart_toStartOf="@id/bottom_sheet_icon_link_iv"
                app:layout_constraintEnd_toEndOf="@id/bottom_sheet_icon_link_iv"/>

            <ImageView
                android:id="@+id/bottom_sheet_icon_share_iv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_share"
                app:layout_constraintTop_toTopOf="@id/bottom_sheet_icon_link_iv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/bottom_sheet_icon_share_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="공유"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/bottom_sheet_icon_share_iv"
                app:layout_constraintStart_toStartOf="@id/bottom_sheet_icon_share_iv"
                app:layout_constraintEnd_toEndOf="@id/bottom_sheet_icon_share_iv"/>

            <ImageView
                android:id="@+id/bottom_sheet_icon_report_iv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_report"
                app:layout_constraintTop_toTopOf="@id/bottom_sheet_icon_link_iv"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/bottom_sheet_icon_report_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="신고"
                android:textSize="12sp"
                android:textColor="@color/red"
                app:layout_constraintTop_toBottomOf="@id/bottom_sheet_icon_report_iv"
                app:layout_constraintStart_toStartOf="@id/bottom_sheet_icon_report_iv"
                app:layout_constraintEnd_toEndOf="@id/bottom_sheet_icon_report_iv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/bottom_sheet_mid_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_icon_cy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/bottom_sheet_text_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_icon_cy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <TextView
                android:id="@+id/bottom_sheet_1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="이 게시물이 표시되는 이유"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <View
                android:id="@+id/bottom_sheet_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/bottom_sheet_2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="즐겨찾기에 추가"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/bottom_sheet_3_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="숨기기"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/bottom_sheet_4_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="팔로우 취소"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>