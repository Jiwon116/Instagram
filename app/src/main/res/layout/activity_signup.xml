<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/signup_logo_iv"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@id/signup_text_ly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/signup_text_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <EditText
            android:id="@+id/signup_id_et"
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:paddingStart="8dp"
            android:background="@drawable/bg_login_text"
            android:hint="이메일"
            android:inputType="text"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/signup_name_et"
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:paddingStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_login_text"
            android:hint="성명"
            android:inputType="textPersonName"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/signup_pw_et"
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:paddingStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_login_text"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_btn"
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_login_btn"
            android:text="가입"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signup_login_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/signup_text_ly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/signup_login_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 있으신가요?"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/signup_login_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="로그인하기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/signup_login_tv_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>